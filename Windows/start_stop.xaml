<Window x:Class="R2R.Windows.start_stop"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:R2R.Windows"
        mc:Ignorable="d"
        Title="" Height="100" Width="100"
        ResizeMode="NoResize" Icon="/Xwindow/Resources/立方体 立体 多面体 方块2.png">
    <Grid Background="{StaticResource Color_BackGround}">
        <Viewbox HorizontalAlignment="Center" Height="44" Stretch="Fill" VerticalAlignment="Center" Width="60">
            <Grid Height="44" Width="60">
                <Button x:Name="start" Content="启动" HorizontalAlignment="Center" VerticalAlignment="Top" Width="60" Click="start_Click" Height="17"/>
                <Button x:Name="stop" Content="停止" HorizontalAlignment="Center" VerticalAlignment="Top" Width="60" Margin="0,27,0,0" Click="stop_Click" Height="17"/>
            </Grid>
        </Viewbox>
    </Grid>
</Window>
